<div class="container donut-container" ng-app="donutUx">
  <div ng-controller="MainController">
    <nav class="navbar navbar-default navbar-fixed-top" style="display:none;">
      <div class="container">
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li data-menuanchor="home"><a href="#home">Donut UX</a></li>
            <li data-menuanchor="sectionOne"><a href="#sectionOne">SectionOne</a></li>
            <li data-menuanchor="sectionTwo"><a href="#sectionTwo">SectionTwo</a></li>
            <li data-menuanchor="contact"><a href="#contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div id="fullpage">
      <div class="section" data-anchor="home">
          <h1>{{title}}</h1>
          <%= image_tag("donut_logo_1024.png", :class => "donut")  %>

          <span class="logo-link section-one">
            <a href="#sectionOne">SectionOne</a>
          </span>
          <span class="logo-link section-two">
            <a href="#sectionTwo">SectionTwo</a>
          </span>
          <span class="logo-link contact">
            <a href="#contact">Contact</a>
          </span>
      </div>

      <div class="section" data-anchor="sectionOne">
        <p>Section 1</p>
      </div>

      <div class="section" data-anchor="sectionTwo">
        <p>Section 2</p>
      </div>

      <div class="section" data-anchor="contact">
        <div class="container contact-container">
          <div ng-show="messageSent" class="alert alert-info fade in">{{messageSuccessText}}</div>

          <form name="contactForm">
            <div class="form-group" ng-class="{'has-error': contactForm.name.$invalid}">
              <label>Name</label>
              <input name="name" ng-model="message.name" ng-required="true" type="text" class="form-control" />
            </div>

            <div class="form-group" ng-class="{'has-error': contactForm.email.$invalid}">
              <label>Email</label>
              <input name="email" ng-model="message.email" ng-required="true" type="text" class="form-control" />
            </div>

            <div class="form-group" ng-class="{'has-error': contactForm.subject.$invalid}">
              <label>Subject</label>
              <input name="subject" ng-model="message.subject" ng-required="true" type="text" class="form-control" />
            </div>

            <div class="form-group" ng-class="{'has-error': contactForm.content.$invalid}">
              <label>Content</label>
              <textarea name="content" ng-model="message.content" ng-required="true" type="text" class="form-control"></textarea>
            </div>

            <div class="actions">
              <button ng-disabled="contactForm.$invalid" ng-click="sendMessage(message)" class="btn btn-primary">Send</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
